<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class entity-name="orderItem" name="entity.OrderItem" table="orders_items" dynamic-update="true">
        <composite-id name="id" class="entity.OrderItemMapping">
            <key-many-to-one name="order" entity-name="order" column="order_id" lazy="false" />
            <key-many-to-one name="item" entity-name="item" column="item_id" lazy="false"/>
        </composite-id>
        <property name="amount" type="java.lang.Long" column="amount" />
    </class>
</hibernate-mapping>